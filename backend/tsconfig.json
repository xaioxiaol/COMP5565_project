{
  "compilerOptions": {
    "target": "es2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "rootDir": ".",
    "declaration": true
  },
  "include": [
    "./scripts",
    "./test",
    "./deploy",
    "./typechain-types"
  ],
  "files": ["./hardhat.config.ts"],
  "exclude": ["node_modules"]
} 